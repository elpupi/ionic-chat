{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "traceResolution": false,
        "lib": [
            "dom",
            "es2015"
        ],
        "module": "es2015",
        "moduleResolution": "node",
        "sourceMap": true,
        "target": "es5",
        "baseUrl": ".",
        "paths": {
            "stickies/*": [
                "../Stickies/src/*"
            ],
            "features-detection/*": [
                "../FeaturesDetection/src/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "../Stickies/src/**/*.ts",
        "../FeaturesDetection/src/**/*.ts"
    ],
    "exclude": [
        "src/**/*.spec.ts",
        "src/**/__tests__/*.ts"
    ],
    "compileOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    }
}
